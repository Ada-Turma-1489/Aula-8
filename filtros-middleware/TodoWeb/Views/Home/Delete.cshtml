@model Todo

<h2>Deseja realmente apagar a Tarefa @Model.Id?</h2>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Id)</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Priority)</dt>
    <dd class="col-sm-10">@Model.Priority</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger btn-sm">Apagar</button>
</form>